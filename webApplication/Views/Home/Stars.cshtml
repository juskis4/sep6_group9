@model webApplication.ViewModels.PersonListViewModel

<h1>Stars</h1>

<div class="container">
    <div class="row">
        @foreach (var star in Model.People)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">

                    <div class="card-body">
                        <h5 class="card-title">@star.Name (@star.BirthYear)</h5>
                        <p>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#moviesForStar-@star.Id" aria-expanded="false" aria-controls="moviesForStar-@star.Id" onclick="toggleButtonText(this)">
                                Show Movies
                            </button>
                        </p>
                        <div class="collapse" id="moviesForStar-@star.Id">
                            <div class="card card-body">
                                @if (star.Movies != null && star.Movies.Any())
                                {
                                    <ul>
                                        @foreach (var movie in star.Movies)
                                        {
                                            <li>@movie.Title (@movie.Year)</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>No movies available.</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Stars", "People", new {page = Model.CurrentPage - 1})">Previous</a>
        </li>

        <li class="page-item disabled">
            <span class="page-link">Page @Model.CurrentPage of @Model.TotalPages</span>
        </li>

        <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Stars", "People", new {page = Model.CurrentPage + 1})">Next</a>
        </li>
    </ul>
</nav>

@section Scripts {
    <script>

        function toggleButtonText(button) {
            var collapseTarget = document.querySelector(button.getAttribute('data-bs-target'));
            var isExpanded = collapseTarget.classList.contains('show');

            if (isExpanded) {
                button.textContent = 'Show Movies'; // If open, change to "Show Movies"
            } else {
                button.textContent = 'Hide Movies'; // If closed, change to "Hide Movies"
            }
        }
    </script>
}